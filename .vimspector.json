{
  "configurations": {
    "rust - lldb": {
      "adapter": "CodeLLDB",
      "filetypes": ["rust"],
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/fizzbuzz_functional",
        "args": ["*${Args}"],
        "sourceLanguages": ["rust"]
      },
      "breakpoints": {
        "exceptions": {
          "cpp_throw": "Y",
          "cpp_catch": "N"
        }
      }
    }
  }
}
